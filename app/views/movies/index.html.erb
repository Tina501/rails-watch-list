<h1>All Movies</h1>

<div class="movie-grid">
  <% @movies.each do |movie| %>
    <div class="movie-card">
      <%= image_tag movie.poster_url, alt: movie.title, class: "movie-poster" %>
      <div class="movie-info">
        <h2><%= movie.title %></h2>
        <p class="rating">Rating: <%= movie.rating %></p>
        <p><%= movie.overview %></p>
      </div>
    </div>
  <% end %>
</div>
