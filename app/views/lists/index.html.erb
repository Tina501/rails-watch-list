<!-- Banner Section -->
<div class="banner">
  <img src="https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8N3x8dGhlYXRlcnxlbnwwfHwwfHx8MA%3D%3D" alt="Movie Banner" class="banner-image">
  <div class="banner-text">
    <h1>Save any kind of movies</h1>
  </div>
</div>

<h1 class="page-title">All Lists</h1>

<div class="lists-container">
  <% @lists.each do |list| %>
    <div class="list-item">
      <h2 class="list-name">
        <%= link_to list.name, list_path(list), class: "list-link" %>
      </h2>
      <%= link_to 'View Movies', list_path(list), class: 'view-movies-button' %>
    </div>
  <% end %>
</div>

<%= link_to 'Create New List', new_list_path, class: "create-list-button" %>
